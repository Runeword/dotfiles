[options]
suppress_default_binds = true

[binds]
# Next, Prev
p = prev
n = next
gg = goto 1
<Shift+G> = goto -1

# Move
h = pan 50 0
l = pan -50 0
j = pan 0 -50
k = pan 0 50
c = center

# Zoom
<Shift+plus> = zoom 1
<equal> = reset
<minus> = zoom -1
u = zoom 1
e = zoom -1
z = zoom actual

# Transform
<Ctrl+r> = rotate by 90
<Ctrl+h> = flip horizontal
<Ctrl+v> = flip vertical

# Other
f = fullscreen
w = close
i = overlay
r = reset
q = quit

# Shell commands
y = exec wl-copy $imv_current_file
d = exec gomi "$imv_current_file"; close

# Gif playback
# <period> = next_frame
# <space> = toggle_playing

# Slideshow control
# t = slideshow +1
# <Shift+T> = slideshow -1

# s = scaling next
# <Shift+S> = upscaling next
