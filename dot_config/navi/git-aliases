in 	git init                                  	New repository
ad 	git-forgit add                            	Stage changes
lo 	git-forgit log                            	List commits
b  	git branch                                	List branches
bn 	git checkout -b BranchName                	Switch to new branch
br 	git branch --move --force BranchNewName   	Rename branch
bdl	git branch --delete --force BranchLocal   	Delete local branch
bdr	git push origin --delete BranchRemote     	Delete remote branch
cm 	git commit -m                             	Commit changes
m  	git merge BranchName                      	Merge BranchName into current branch
ko 	git checkout
kb 	git-forgit checkout_branch
kf 	git-forgit checkout_file
kt 	git-forgit checkout_tag
su 	git status                                	Show files status
st 	git stash --include-untracked             	Stash staged + unstaged + untracked
stu	git stash --include-untracked --keep-index	Stash unstaged + untracked
sty	git stash apply                           	Apply changes from last stash
ps 	git push
pl 	git pull
re 	git restore                               	Remove changes
res	git restore --staged                      	Unstage changes
rts	git reset --soft HEAD~<n>                 	Revert last n commit and keep their changes as unstaged
rth	git reset --hard HEAD~<n>                 	Revert last n commit and remove their changes
cl 	git clean --force -d                      	Remove untracked files
di 	git-forgit diff                           	Show changes
dc 	git diff --cached                         	Show staged changes
